<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Cor da sombra (semi-transparente) -->
            <corners android:radius="8dp"/> <!-- Arredondamento dos cantos -->
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/> <!-- Padding da sombra -->
        </shape>
    </item>

    <!-- Fundo com cor diferenciada -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Cor de fundo do item (branco claro) -->
            <corners android:radius="8dp"/> <!-- Arredondamento dos cantos -->
        </shape>
    </item>
</layer-list>
